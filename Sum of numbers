import java.util.Scanner;
public class Factorial
{
    public static void main(String[] args) {
        int n,sum=0,i;
        Scanner in=new Scanner(System.in);
        n=in.nextInt();
        for(i=1;i<=n;i++)
        {
            sum=sum+i;
        }
System.out.println("sum of first numbers of"+n);
System.out.print("is "+sum);

  }
}
